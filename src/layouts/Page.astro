---
import Base from './Base.astro';

interface Props {
  frontmatter: {
    title: string;
    description?: string;
  };
}

const { title, description } = Astro.props.frontmatter;
---

<Base title={title} description={description}>
  <article class="prose">
    <h1>{title}</h1>
    <slot />
  </article>
</Base>
